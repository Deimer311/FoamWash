function registrarSesionActiva(email, role, token) {
    const sesion = {
        id: `SESSION-${Date.now()}`,
        email, role, token,
        fechaInicio: new Date().toISOString(),
        ultimaActividad: new Date().toISOString()
    };
    
    let sesionesActivas = JSON.parse(
        localStorage.getItem('sesionesActivas') || '[]'
    );
    
    const indiceExistente = sesionesActivas.findIndex(
        s => s.email === email
    );
    
    if (indiceExistente !== -1) {
        sesionesActivas[indiceExistente] = sesion;
    } else {
        sesionesActivas.push(sesion);
    }
    
    localStorage.setItem('sesionesActivas', JSON.stringify(sesionesActivas));
    return sesion;
}
