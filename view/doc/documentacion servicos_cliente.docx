function confirmarPedido() {
    const form = document.getElementById('formConfirmacion');
    
    if (!form.checkValidity()) {
        form.reportValidity();
        return;
    }
    
    const serviciosSinDetalles = carrito.filter(
        item => !item.tamano || !item.tipoLavado
    );
    
    if (serviciosSinDetalles.length > 0) {
        mostrarNotificacion('Completa todos los detalles');
        return;
    }
    
    const pedido = {
        id: `PED-${Date.now()}`,
        servicios: carrito,
        // ... otros datos
        total: calcularTotal(),
        estado: 'Pendiente',
        fechaCreacion: new Date().toISOString()
    };
    
    let pedidos = JSON.parse(localStorage.getItem('pedidos') || '[]');
    pedidos.push(pedido);
    localStorage.setItem('pedidos', JSON.stringify(pedidos));
    
    mostrarConfirmacionExitosa(pedido);
}
